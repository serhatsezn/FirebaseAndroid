<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgorund"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:padding="@dimen/activity_horizontal_margin"
        android:weightSum="1"
        android:orientation="vertical"
        android:layout_below="@+id/top">



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/linesReg"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lineEmailreg1">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ffffff"
                    android:padding="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lineEmailreg3">

                <View
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:background="#ffffff"
                    android:padding="10dp"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Linereg4"
                android:layout_alignBottom="@+id/lineEmailreg3"
                android:layout_toRightOf="@+id/lineEmail3reg"
                android:layout_toEndOf="@+id/lineEmailreg3">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#FFFFFF"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:padding="0dp"
                android:layout_below="@+id/lineEmailreg1"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">
                <View
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:background="#ffffff"
                    android:padding="10dp"

                    />
            </LinearLayout>

            <EditText
                android:id="@+id/emailReg"
                android:layout_width="267dp"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:gravity="center"
                android:layout_gravity="center"
                android:inputType="textEmailAddress"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:padding="10dp"
                android:layout_alignBottom="@+id/linearLayout2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp" />


        </RelativeLayout>


        <Button
            android:text="Kayıt Ol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/loginbtn"
            android:id="@+id/btn_signuo2"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/lines2"
            android:layout_marginTop="10dp" />
        <View
            android:layout_width="150dp"
            android:layout_height="1dp"
            android:layout_marginTop="30dp"
            android:background="#ffffff"
            android:padding="10dp"
            android:id="@+id/or"
            android:layout_below="@+id/btn_signuo2"

            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/lines2"
            android:layout_below="@+id/linesReg"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linePassReg1">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ffffff"
                    android:padding="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linePassReg3">

                <View
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:background="#ffffff"
                    android:padding="10dp"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linePassReg4"
                android:layout_alignBottom="@+id/linePassReg3"
                android:layout_toRightOf="@+id/linePassReg3"
                android:layout_toEndOf="@+id/linePassReg3">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#FFFFFF"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:padding="0dp"
                android:layout_below="@+id/linePassReg1"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">
                <View
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:background="#ffffff"
                    android:padding="10dp"

                    />
            </LinearLayout>

            <EditText
                android:id="@+id/passwordReg"
                android:layout_width="267dp"
                android:layout_height="wrap_content"
                android:hint="Şifre"
                android:gravity="center"
                android:inputType="textPassword"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:layout_alignBottom="@+id/linePassReg4"
                android:layout_centerHorizontal="true" />


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Veya"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/btn_signuo2"
            android:id="@+id/orTxt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp" />

        <View
            android:layout_width="150dp"
            android:layout_height="1dp"
            android:background="#ffffff"
            android:padding="10dp"
            android:id="@+id/or2"

            android:layout_below="@+id/or"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <View
            android:layout_width="1dp"
            android:background="#ffffff"
            android:padding="10dp"
            android:id="@+id/or3"

            android:layout_height="30dp"
            android:layout_below="@+id/orTxt"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="Giriş"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_signin"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/orTxt"
            android:layout_toLeftOf="@+id/orTxt"
            android:layout_toStartOf="@+id/orTxt"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Şifremi Unuttum"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:id="@+id/btn_reset_password2"
            android:layout_alignBottom="@+id/btn_signin"
            android:layout_toRightOf="@+id/orTxt"
            android:layout_toEndOf="@+id/orTxt" />


    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="20dp"
        android:visibility="gone" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center"
        android:id="@+id/top">
        <TextView
            android:text="Kayıt Ol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:id="@+id/title"
            android:textStyle="bold|italic"
            android:textSize="50sp"
            android:layout_marginTop="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </LinearLayout>



</RelativeLayout>
